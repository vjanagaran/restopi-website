---
// src/layouts/BaseLayout.astro
export interface Props {
  title?: string;
  description?: string;
  image?: string;
}

const {
  title = "RestoPi - Save ₹2 Lakhs Monthly | Restaurant Intelligence Revolution",
  description = "RestoPi helps restaurant owners save ₹2 lakhs monthly and get home by 10 PM. AI-powered waste prevention.",
  image = "/og-default.jpg",
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
  <meta name="description" content={description} />
  
  <!-- Google Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800;900&display=swap" rel="stylesheet">
  
  <!-- Google Analytics -->
  <script async src="https://www.googletagmanager.com/gtag/js?id=G-9PQMMM6L6R"></script>
  <script is:inline>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());
    gtag('config', 'G-9PQMMM6L6R');
  </script>
</head>
<body>
  <slot />
</body>
</html>

<style is:global>
  :root {
    --pi-indigo: #2D2A6E;
    --spiced-saffron: #C2410C;
  }
  
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }
  
  body {
    font-family: 'Inter', sans-serif;
  }
</style>