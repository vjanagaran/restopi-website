---
// src/layouts/BaseLayout.astro
export interface Props {
  title?: string;
  description?: string;
  image?: string;
}

const {
  title = "RestoPi - Save ₹2 Lakhs Monthly | Restaurant Intelligence Revolution",
  description = "RestoPi helps restaurant owners save ₹2 lakhs monthly and get home by 10 PM. AI-powered waste prevention.",
  image = "/og-default.jpg",
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
  <meta name="description" content={description} />
  
  <!-- Canonical URL -->
  <link rel="canonical" href={Astro.url.href} />
  
  <!-- Open Graph / Facebook -->
  <meta property="og:type" content="website" />
  <meta property="og:url" content={Astro.url.href} />
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:image" content={new URL(image, Astro.url.origin).href} />
  <meta property="og:image:width" content="1200" />
  <meta property="og:image:height" content="630" />
  <meta property="og:site_name" content="RestoPi" />
  <meta property="og:locale" content="en_US" />
  
  <!-- Twitter Card -->
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:url" content={Astro.url.href} />
  <meta name="twitter:title" content={title} />
  <meta name="twitter:description" content={description} />
  <meta name="twitter:image" content={new URL(image, Astro.url.origin).href} />
  <meta name="twitter:creator" content="@RestoPi_AI" />
  
  <!-- Favicons -->
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
  <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
  <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
  <link rel="manifest" href="/site.webmanifest" />
  
  <!-- Structured Data -->
  <script type="application/ld+json" is:inline>
    {
      "@context": "https://schema.org",
      "@type": "Organization",
      "name": "RestoPi",
      "alternateName": "RestoPi Restaurant Intelligence",
      "url": "https://www.restopi.com",
      "logo": "https://www.restopi.com/logo.png",
      "description": "AI-powered restaurant intelligence platform helping owners save ₹2 lakhs monthly and achieve work-life balance",
      "foundingDate": "2024",
      "contactPoint": {
        "@type": "ContactPoint",
        "telephone": "+91-98842-48927",
        "contactType": "sales",
        "availableLanguage": ["English", "Hindi"]
      },
      "sameAs": [
        "https://www.linkedin.com/company/restopi",
        "https://twitter.com/RestoPi_AI"
      ],
      "offers": {
        "@type": "Offer",
        "name": "Restaurant Intelligence Platform",
        "description": "Complete restaurant automation and intelligence suite",
        "priceCurrency": "INR",
        "price": "40000",
        "priceValidUntil": "2025-12-31"
      }
    }
  </script>
  
  <!-- Google Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800;900&display=swap" rel="stylesheet">
  
  <!-- Google Analytics 4 with Enhanced Tracking -->
  <script async src="https://www.googletagmanager.com/gtag/js?id=G-9PQMMM6L6R"></script>
  <script is:inline>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());
    
    // Enhanced ecommerce and conversion tracking
    gtag('config', 'G-9PQMMM6L6R', {
      // Enhanced measurement features
      enhanced_measurement: true,
      page_title: document.title,
      page_location: window.location.href,
      
      // Custom parameters for restaurant tracking
      custom_map: {
        'custom_parameter_1': 'segment',
        'custom_parameter_2': 'solution',
        'custom_parameter_3': 'savings_potential'
      },
      
      // Conversion tracking
      send_page_view: true,
      allow_google_signals: true,
      allow_ad_personalization_signals: true
    });

    // Track page performance
    gtag('event', 'page_view', {
      page_title: document.title,
      page_location: window.location.href,
      page_path: window.location.pathname
    });

    // Global analytics utility functions
    window.trackEvent = function(eventName, parameters = {}) {
      gtag('event', eventName, {
        event_category: parameters.category || 'engagement',
        event_label: parameters.label || '',
        value: parameters.value || 0,
        ...parameters
      });
    };

    window.trackConversion = function(conversionAction, value = 0, currency = 'INR') {
      gtag('event', 'conversion', {
        send_to: 'G-9PQMMM6L6R',
        value: value,
        currency: currency,
        transaction_id: Date.now().toString(),
        event_category: 'conversion',
        event_label: conversionAction
      });
    };

    window.trackRestaurantData = function(data) {
      gtag('event', 'restaurant_interaction', {
        event_category: 'restaurant_data',
        segment: data.segment || '',
        solution: data.solution || '',
        savings_potential: data.savings || 0,
        city: data.city || '',
        outlet_count: data.outlets || 1
      });
    };

    // Track scroll depth
    let maxScroll = 0;
    window.addEventListener('scroll', function() {
      const scrollPercent = Math.round((window.scrollY / (document.body.scrollHeight - window.innerHeight)) * 100);
      if (scrollPercent > maxScroll && scrollPercent % 25 === 0) {
        maxScroll = scrollPercent;
        gtag('event', 'scroll', {
          event_category: 'engagement',
          event_label: scrollPercent + '%',
          value: scrollPercent
        });
      }
    });

    // Track time on page
    let startTime = Date.now();
    window.addEventListener('beforeunload', function() {
      const timeOnPage = Math.round((Date.now() - startTime) / 1000);
      gtag('event', 'time_on_page', {
        event_category: 'engagement',
        value: timeOnPage,
        event_label: timeOnPage + ' seconds'
      });
    });

    // Initialize conversion tracking
    document.addEventListener('DOMContentLoaded', function() {
      // Import and initialize conversion tracking
      import('/src/utils/conversionTracking.js').then(module => {
        window.RestoPiConversionTracker = new module.ConversionTracker();
      }).catch(err => {
        console.warn('Could not load conversion tracking:', err);
      });
    });
  </script>
</head>
<body>
  <slot />
</body>
</html>

<style is:global>
  :root {
    --pi-indigo: #2D2A6E;
    --spiced-saffron: #C2410C;
  }
  
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }
  
  body {
    font-family: 'Inter', sans-serif;
  }
</style>