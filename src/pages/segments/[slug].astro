---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Navigation from '../../components/Navigation.astro';
import Footer from '../../components/Footer.astro';
import WhatsAppButton from '../../components/WhatsAppButton.astro';
import segments from '../../data/segments.json';

export function getStaticPaths() {
  return segments.segments.map(segment => ({
    params: { slug: segment.slug },
    props: { segment }
  }));
}

const { segment } = Astro.props;
---

<BaseLayout title={`${segment.name} - Save ${segment.averageWaste} Monthly | RestoPi`}>
  <Navigation />
  <main class="container mx-auto px-4 py-8 mt-16">
    <section class="hero bg-gradient-to-br from-orange-50 to-white py-16 rounded-lg mb-12">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
          {segment.name}: Save {segment.averageWaste} Monthly
        </h1>
        <p class="text-xl text-gray-700 mb-8">
          {segment.description}
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/demo" 
             onclick="trackCTAClick('demo', 'segment_hero', {segment: '{segment.id}'})"
             class="bg-orange-600 text-white px-8 py-3 rounded-lg font-semibold hover:bg-orange-700 transition">
            Start Free Trial
          </a>
          <a href="/calculator" 
             onclick="trackCTAClick('calculator', 'segment_hero', {segment: '{segment.id}'})"
             class="border-2 border-orange-600 text-orange-600 px-8 py-3 rounded-lg font-semibold hover:bg-orange-50 transition">
            Calculate Savings
          </a>
        </div>
      </div>
    </section>

    <section class="grid md:grid-cols-2 lg:grid-cols-4 gap-6 mb-12">
      <div class="bg-white p-6 rounded-lg shadow-md">
        <h3 class="font-semibold text-gray-900 mb-2">Daily Orders</h3>
        <p class="text-2xl font-bold text-orange-600">{segment.keyMetrics.dailyOrders}</p>
      </div>
      <div class="bg-white p-6 rounded-lg shadow-md">
        <h3 class="font-semibold text-gray-900 mb-2">Avg Ticket Size</h3>
        <p class="text-2xl font-bold text-orange-600">{segment.keyMetrics.avgTicketSize}</p>
      </div>
      <div class="bg-white p-6 rounded-lg shadow-md">
        <h3 class="font-semibold text-gray-900 mb-2">Current Waste</h3>
        <p class="text-2xl font-bold text-red-600">{segment.keyMetrics.wastePercentage}</p>
      </div>
      <div class="bg-white p-6 rounded-lg shadow-md">
        <h3 class="font-semibold text-gray-900 mb-2">Peak Hours</h3>
        <p class="text-lg font-semibold text-gray-700">{segment.keyMetrics.peakHours}</p>
      </div>
    </section>

    <section class="mb-12">
      <h2 class="text-3xl font-bold text-gray-900 mb-6">Common Challenges for {segment.shortName}</h2>
      <div class="grid md:grid-cols-2 gap-6">
        {segment.painPoints.map((pain) => (
          <div class="flex items-start gap-3">
            <svg class="w-6 h-6 text-red-500 mt-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
            </svg>
            <div>
              <p class="text-gray-700">{pain}</p>
            </div>
          </div>
        ))}
      </div>
    </section>

    <section class="mb-12">
      <h2 class="text-3xl font-bold text-gray-900 mb-6">RestoPi Solutions for {segment.shortName}</h2>
      <div class="grid md:grid-cols-2 gap-6">
        {segment.solutions.map((solution) => (
          <div class="flex items-start gap-3">
            <svg class="w-6 h-6 text-green-500 mt-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <div>
              <p class="text-gray-700">{solution}</p>
            </div>
          </div>
        ))}
      </div>
    </section>

    <section class="bg-orange-50 p-8 rounded-lg mb-12">
      <h2 class="text-3xl font-bold text-gray-900 mb-6">Success Story</h2>
      <blockquote class="text-lg text-gray-700 italic mb-4">
        "{segment.testimonial.quote}"
      </blockquote>
      <div class="flex items-center gap-4">
        <div>
          <p class="font-semibold text-gray-900">{segment.testimonial.author}</p>
          <p class="text-gray-600">{segment.testimonial.business}</p>
        </div>
        <div class="ml-auto text-right">
          <p class="text-sm text-gray-600">Monthly Savings</p>
          <p class="text-2xl font-bold text-green-600">{segment.testimonial.savings}</p>
        </div>
      </div>
    </section>

    <section class="text-center py-12">
      <h2 class="text-3xl font-bold text-gray-900 mb-4">Ready to Transform Your {segment.shortName}?</h2>
      <p class="text-xl text-gray-700 mb-8">
        Join hundreds of {segment.shortName} owners who are saving money and going home early.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/demo" class="bg-orange-600 text-white px-8 py-3 rounded-lg font-semibold hover:bg-orange-700 transition">
          Book Free Demo
        </a>
        <a href="https://wa.me/919999999999" class="bg-green-600 text-white px-8 py-3 rounded-lg font-semibold hover:bg-green-700 transition">
          WhatsApp Us Now
        </a>
      </div>
    </section>
  </main>
  <Footer />
  <WhatsAppButton />

  <script>
    // Track segment page view
    document.addEventListener('DOMContentLoaded', function() {
      const segmentData = {
        id: '{segment.id}',
        name: '{segment.name}',
        averageWaste: '{segment.averageWaste}',
        averageOutlets: '{segment.averageOutlets}'
      };
      
      // Track segment view
      if (typeof window.trackEvent !== 'undefined') {
        window.trackEvent('segment_view', {
          category: 'segment_engagement',
          label: segmentData.name,
          segment_type: segmentData.id,
          average_waste: segmentData.averageWaste,
          outlet_count: segmentData.averageOutlets
        });
        
        if (typeof window.trackRestaurantData !== 'undefined') {
          window.trackRestaurantData({
            segment: segmentData.id,
            savings: segmentData.averageWaste.replace(/[^\d]/g, ''),
            outlets: segmentData.averageOutlets
          });
        }
      }
    });

    // Make CTA tracking function available
    function trackCTAClick(ctaType, location, additionalData = {}) {
      if (typeof window.trackEvent !== 'undefined') {
        window.trackEvent('cta_click', {
          category: 'conversion',
          label: ctaType,
          cta_type: ctaType,
          page_location: location,
          ...additionalData
        });

        if (['demo', 'whatsapp', 'trial', 'calculator'].includes(ctaType.toLowerCase())) {
          if (typeof window.trackConversion !== 'undefined') {
            window.trackConversion(`${ctaType}_click`, 1);
          }
        }
      }
    }
    window.trackCTAClick = trackCTAClick;
  </script>
</BaseLayout>