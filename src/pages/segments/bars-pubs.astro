<script>
function calculateBarROI() {
  const beverageRevenue = parseInt(document.getElementById('beverageRevenue').value) || 0;
  const pourCost = parseFloat(document.getElementById('pourCost').value) || 0;
  
  if (beverageRevenue === 0 || pourCost === 0) {
    alert('Please enter your monthly beverage revenue and current pour cost percentage');
    return;
  }
  
  // Bar-specific calculations
  const currentPourCostAmount = beverageRevenue * (pourCost / 100);
  const optimizedPourCost = Math.max(18, pourCost * 0.6); // Reduce by 40% minimum
  const newPourCostAmount = beverageRevenue * (optimizedPourCost / 100);
  
  const monthlySavings = currentPourCostAmount - newPourCostAmount;
  const marginImprovement = pourCost - optimizedPourCost;
  const yearlyProfit = monthlySavings * 12;
  
  const restopiCost = 35000; // Bar pricing
  const netMonthlySavings = monthlySavings - restopiCost;
  
  document.getElementById('monthlySavings').textContent = '₹' + Math.round(netMonthlySavings).toLocaleString();
  document.getElementById('marginImprovement').textContent = Math.round(marginImprovement) + '%';
  document.getElementById('yearlyProfit').textContent = '₹' + Math.round(yearlyProfit).toLocaleString();
  
  document.getElementById('roiResults').classList.remove('hidden');
  
  // Track calculation
  window.trackEvent('roi_calculated', {
    segment: 'bar_pub',
    beverage_revenue: beverageRevenue,
    savings: netMonthlySavings,
    margin_improvement: marginImprovement
  });
}

