<script>
function calculateCafeROI() {
  const dailyCups = parseInt(document.getElementById('dailyCups').value) || 0;
  const hoursWorked = parseFloat(document.getElementById('hoursWorked').value) || 0;
  
  if (dailyCups === 0 || hoursWorked === 0) {
    alert('Please enter your daily cups sold and hours worked');
    return;
  }
  
  // Cafe specific calculations
  const monthlyRevenue = dailyCups * 80 * 30; // Assuming ‚Çπ80 average per cup
  const wasteReduction = monthlyRevenue * 0.15; // 15% waste typical for cafes
  const efficiencyGains = monthlyRevenue * 0.10; // 10% efficiency improvement
  const marginOptimization = monthlyRevenue * 0.08; // 8% margin improvement
  
  const totalMonthlySavings = wasteReduction + efficiencyGains + marginOptimization;
  const restopiCost = 25000; // Cafe-friendly pricing
  const netMonthlySavings = totalMonthlySavings - restopiCost;
  
  // Time calculations
  const optimalHours = Math.max(6, hoursWorked * 0.6); // 40% reduction in hours
  const weeklytimeSaved = (hoursWorked - optimalHours) * 7;
  const creativeTime = weeklytimeSaved * 0.7; // 70% of saved time for creative pursuits
  
  document.getElementById('monthlySavings').textContent = '‚Çπ' + Math.round(netMonthlySavings).toLocaleString();
  document.getElementById('timeSaved').textContent = Math.round(weeklytimeSaved) + ' hrs';
  document.getElementById('passionTime').textContent = Math.round(creativeTime) + ' hrs';
  
  document.getElementById('roiResults').classList.remove('hidden');
  
  // Track calculation
  window.trackEvent('roi_calculated', {
    segment: 'cafe',
    daily_cups: dailyCups,
    savings: netMonthlySavings,
    time_saved: weeklytimeSaved
  });
}

