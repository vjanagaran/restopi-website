>

<Navigation />

<style>
  @keyframes balanceFloat {
    0%, 100% { transform: translateY(0px) rotate(0deg); }
    50% { transform: translateY(-10px) rotate(2deg); }
  }
  
  @keyframes warmGlow {
    0%, 100% { box-shadow: 0 0 20px rgba(251, 146, 60, 0.3); }
    50% { box-shadow: 0 0 40px rgba(251, 146, 60, 0.6); }
  }
  
  .balance-gradient {
    background: linear-gradient(135deg, #f97316 0%, #ea580c 50%, #dc2626 100%);
  }
  
  .casual-accent {
    background: linear-gradient(45deg, #f97316, #fb923c);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
  
  .balance-counter {
    animation: warmGlow 3s ease-in-out infinite;
  }
  
  .balance-icon {
    animation: balanceFloat 4s ease-in-out infinite;
  }
  
  .casual-dining-bg {
    background: radial-gradient(circle at center, rgba(251, 146, 60, 0.1) 0%, transparent 70%);
  }
</style>

