<script>
function calculateCasualDiningROI() {
  const revenue = parseInt(document.getElementById('revenue').value) || 0;
  const serviceTime = parseFloat(document.getElementById('serviceTime').value) || 0;
  
  if (revenue === 0 || serviceTime === 0) {
    alert('Please enter your monthly revenue and average service time');
    return;
  }
  
  // Casual dining specific calculations
  const currentEfficiency = Math.max(0.4, 1 - (serviceTime - 10) * 0.05); // Efficiency based on service time
  const optimizedServiceTime = Math.max(8, serviceTime * 0.6); // 40% improvement in service time
  const newEfficiency = Math.min(0.95, currentEfficiency + 0.3);
  
  const capacityIncrease = ((1 / optimizedServiceTime) / (1 / serviceTime) - 1) * 100;
  const serviceImprovement = ((serviceTime - optimizedServiceTime) / serviceTime) * 100;
  
  // Financial calculations
  const wasteReduction = revenue * 0.08; // 8% waste reduction
  const efficiencyGains = revenue * 0.12; // 12% efficiency gains
  const capacityRevenue = revenue * (capacityIncrease / 100) * 0.7; // 70% of capacity increase realized
  
  const totalMonthlySavings = wasteReduction + efficiencyGains + capacityRevenue;
  const restopiCost = 35000; // Mid-tier pricing for casual dining
  const netMonthlySavings = totalMonthlySavings - restopiCost;
  
  document.getElementById('monthlySavings').textContent = '₹' + Math.round(netMonthlySavings).toLocaleString();
  document.getElementById('serviceImprovement').textContent = Math.round(serviceImprovement) + '%';
  document.getElementById('capacityIncrease').textContent = Math.round(capacityIncrease) + '%';
  
  document.getElementById('roiResults').classList.remove('hidden');
  
  // Track calculation
  window.trackEvent('roi_calculated', {
    segment: 'casual_dining',
    revenue: revenue,
    savings: netMonthlySavings,
    service_improvement: serviceImprovement
  });
}

