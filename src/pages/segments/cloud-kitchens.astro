<script>
function calculateCloudKitchenROI() {
  const dailyOrders = parseInt(document.getElementById('dailyOrders').value) || 0;
  const avgOrderValue = parseFloat(document.getElementById('avgOrderValue').value) || 0;
  
  if (dailyOrders === 0 || avgOrderValue === 0) {
    alert('Please enter your daily orders and average order value');
    return;
  }
  
  // Cloud kitchen specific calculations
  const monthlyRevenue = dailyOrders * avgOrderValue * 30;
  const currentCancellationLoss = monthlyRevenue * 0.18; // 18% typical cancellation loss
  const inefficiencyLoss = monthlyRevenue * 0.15; // 15% efficiency loss
  const qualityIssueLoss = monthlyRevenue * 0.08; // 8% from quality issues
  
  // Potential gains
  const cancellationReduction = currentCancellationLoss * 0.8; // 80% reduction
  const efficiencyGains = inefficiencyLoss * 0.7; // 70% efficiency gain
  const qualityImprovement = qualityIssueLoss * 0.6; // 60% quality improvement
  
  // Capacity expansion potential
  const newOrderCapacity = Math.round(dailyOrders * 2.5); // 2.5x capacity increase
  const additionalRevenue = (newOrderCapacity - dailyOrders) * avgOrderValue * 30 * 0.6; // 60% utilization
  
  const totalMonthlySavings = cancellationReduction + efficiencyGains + qualityImprovement;
  const restopiCost = 40000; // Cloud kitchen pricing
  const netMonthlySavings = totalMonthlySavings - restopiCost;
  
  document.getElementById('monthlySavings').textContent = '‚Çπ' + Math.round(netMonthlySavings).toLocaleString();
  document.getElementById('orderCapacity').textContent = newOrderCapacity.toLocaleString() + '/day';
  document.getElementById('revenueGain').textContent = '‚Çπ' + Math.round(additionalRevenue).toLocaleString();
  
  document.getElementById('roiResults').classList.remove('hidden');
  
  // Track calculation
  window.trackEvent('roi_calculated', {
    segment: 'cloud_kitchen',
    daily_orders: dailyOrders,
    savings: netMonthlySavings,
    capacity_increase: newOrderCapacity - dailyOrders
  });
}

