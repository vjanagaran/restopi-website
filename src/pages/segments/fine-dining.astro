<script>
function calculateFineDiningROI() {
  const revenue = parseInt(document.getElementById('revenue').value) || 0;
  const foodCost = parseFloat(document.getElementById('foodCost').value) || 0;
  
  if (revenue === 0 || foodCost === 0) {
    alert('Please enter your monthly revenue and food cost percentage');
    return;
  }
  
  // Fine dining specific calculations
  const monthlyFoodCost = revenue * (foodCost / 100);
  const typicalWaste = monthlyFoodCost * 0.18; // 18% waste typical for fine dining
  const inventoryOptimization = monthlyFoodCost * 0.12; // 12% savings from better inventory
  const staffEfficiency = revenue * 0.08; // 8% savings from staff optimization
  
  const totalMonthlySavings = typicalWaste + inventoryOptimization + staffEfficiency;
  const restopiCost = 45000; // Premium pricing for fine dining
  const netMonthlySavings = totalMonthlySavings - restopiCost;
  const yearlyROI = ((netMonthlySavings * 12) / (restopiCost * 12)) * 100;
  const paybackDays = Math.ceil((restopiCost / netMonthlySavings) * 30);
  
  document.getElementById('monthlySavings').textContent = '₹' + netMonthlySavings.toLocaleString();
  document.getElementById('yearlyROI').textContent = Math.round(yearlyROI) + '%';
  document.getElementById('paybackTime').textContent = paybackDays + ' days';
  
  document.getElementById('roiResults').classList.remove('hidden');
  
  // Track calculation
  window.trackEvent('roi_calculated', {
    segment: 'fine_dining',
    revenue: revenue,
    savings: netMonthlySavings,
    roi: yearlyROI
  });
}

// Countdown for spots remaining
let spotsLeft = 3;
function updateSpots() {
  const element = document.getElementById('spotsLeft');
  if (element && spotsLeft > 0) {
    if (Math.random() < 0.3) { // 30% chance every minute
      spotsLeft--;
      element.textContent = spotsLeft;
      
      if (spotsLeft <= 1) {
        element.parentElement.innerHTML = 'FINAL SPOT - ' + element.parentElement.innerHTML;
      }
    }
  }
}

// Update spots every minute
