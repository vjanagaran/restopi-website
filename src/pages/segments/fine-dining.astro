---
import BaseLayout from '../../layouts/BaseLayout.astro';
---

<BaseLayout 
  title="Fine Dining Liberation - Prestige Without the Prison | RestoPi"
  description="Transform your fine dining establishment from a 16-hour prison into a prestigious empire. Maintain exclusivity while achieving ₹5L+ monthly savings and work-life balance."
>

<style>
  @keyframes elegantGlow {
    0%, 100% { box-shadow: 0 0 20px rgba(212, 175, 55, 0.3); }
    50% { box-shadow: 0 0 40px rgba(212, 175, 55, 0.6); }
  }
  
  @keyframes prestige {
    0% { transform: scale(1) rotate(0deg); }
    25% { transform: scale(1.05) rotate(1deg); }
    75% { transform: scale(1.05) rotate(-1deg); }
    100% { transform: scale(1) rotate(0deg); }
  }
  
  .elegant-gradient {
    background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 50%, #1a1a1a 100%);
  }
  
  .gold-accent {
    background: linear-gradient(45deg, #D4AF37, #FFD700);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
  
  .prestige-counter {
    animation: elegantGlow 3s ease-in-out infinite;
  }
  
  .michelin-star {
    animation: prestige 4s ease-in-out infinite;
  }
  
  .fine-dining-bg {
    background: radial-gradient(circle at center, rgba(212, 175, 55, 0.1) 0%, transparent 70%);
  }
</style>

