<script>
function calculateFoodCourtROI() {
  const monthlyRent = parseInt(document.getElementById('monthlyRent').value) || 0;
  const dailyOrders = parseInt(document.getElementById('dailyOrders').value) || 0;
  
  if (monthlyRent === 0 || dailyOrders === 0) {
    alert('Please enter your monthly rent and daily orders');
    return;
  }
  
  // Food court specific calculations
  const monthlyRevenue = dailyOrders * 320 * 30; // Assuming ‚Çπ320 average order value
  const currentRentRatio = (monthlyRent / monthlyRevenue) * 100;
  
  // Efficiency improvements
  const wasteReduction = monthlyRevenue * 0.12; // 12% waste reduction
  const inventoryOptimization = monthlyRent * 0.3; // 30% rent efficiency through better inventory
  const serviceSpeedGains = monthlyRevenue * 0.08; // 8% revenue increase from faster service
  
  const totalSavings = wasteReduction + inventoryOptimization + serviceSpeedGains;
  const restopiCost = 25000; // Food court pricing
  const netMonthlySavings = totalSavings - restopiCost;
  
  const newRentRatio = ((monthlyRent - inventoryOptimization) / (monthlyRevenue + serviceSpeedGains)) * 100;
  const rentEfficiencyGain = currentRentRatio - newRentRatio;
  
  // Assuming 200 sq ft space
  const revenuePerSqFt = (monthlyRevenue + serviceSpeedGains) / 200;
  
  document.getElementById('monthlySavings').textContent = '‚Çπ' + Math.round(netMonthlySavings).toLocaleString();
  document.getElementById('rentEfficiency').textContent = Math.round(rentEfficiencyGain) + '%';
  document.getElementById('spaceROI').textContent = '‚Çπ' + Math.round(revenuePerSqFt).toLocaleString();
  
  document.getElementById('roiResults').classList.remove('hidden');
  
  // Track calculation
  window.trackEvent('roi_calculated', {
    segment: 'food_court',
    monthly_rent: monthlyRent,
    daily_orders: dailyOrders,
    savings: netMonthlySavings
  });
}

