<script>
function calculateFranchiseROI() {
  const numOutlets = parseInt(document.getElementById('numOutlets').value) || 0;
  const revenuePerOutlet = parseInt(document.getElementById('revenuePerOutlet').value) || 0;
  
  if (numOutlets === 0 || revenuePerOutlet === 0) {
    alert('Please enter number of outlets and revenue per outlet');
    return;
  }
  
  // Franchise specific calculations
  const totalRevenue = numOutlets * revenuePerOutlet;
  
  // Efficiency gains compound with more outlets
  const complianceEfficiency = revenuePerOutlet * 0.08; // 8% per outlet
  const operationalStandardization = revenuePerOutlet * 0.12; // 12% through standardization
  const multiLocationSynergies = revenuePerOutlet * (numOutlets * 0.02); // 2% per outlet in synergies
  
  const savingsPerOutlet = complianceEfficiency + operationalStandardization + multiLocationSynergies;
  const totalMonthlySavings = savingsPerOutlet * numOutlets;
  
  const restopiCostPerOutlet = 35000; // Franchise pricing per outlet
  const totalRestopiCost = restopiCostPerOutlet * numOutlets;
  const netTotalSavings = totalMonthlySavings - totalRestopiCost;
  const netSavingsPerOutlet = savingsPerOutlet - restopiCostPerOutlet;
  
  // Assuming 7% royalty rate
  const royaltyPerOutlet = revenuePerOutlet * 0.07;
  const royaltyROI = (savingsPerOutlet / royaltyPerOutlet) * 100;
  
  document.getElementById('totalSavings').textContent = '₹' + Math.round(netTotalSavings).toLocaleString();
  document.getElementById('savingsPerOutlet').textContent = '₹' + Math.round(netSavingsPerOutlet).toLocaleString();
  document.getElementById('royaltyROI').textContent = Math.round(royaltyROI) + '%';
  
  document.getElementById('roiResults').classList.remove('hidden');
  
  // Track calculation
  window.trackEvent('roi_calculated', {
    segment: 'franchise',
    num_outlets: numOutlets,
    revenue_per_outlet: revenuePerOutlet,
    total_savings: netTotalSavings
  });
}

