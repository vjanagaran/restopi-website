---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Navigation from '../../components/Navigation.astro';
import Footer from '../../components/Footer.astro';
import WhatsAppButton from '../../components/WhatsAppButton.astro';
import segments from '../../data/segments.json';
---

<BaseLayout title="Restaurant Segments - Solutions for Every Restaurant Type | RestoPi">
  <Navigation />
  <main class="container mx-auto px-4 py-8 mt-16">
    <section class="hero bg-gradient-to-br from-orange-50 to-white py-16 rounded-lg mb-12">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
          Solutions for Every Restaurant Type
        </h1>
        <p class="text-xl text-gray-700 mb-8">
          From QSRs to fine dining, cloud kitchens to cafes - RestoPi helps every restaurant save ‚Çπ2 lakhs monthly and get owners home by 10 PM.
        </p>
      </div>
    </section>

    <section class="mb-12">
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {segments.segments.map((segment) => (
          <a href={`/segments/${segment.slug}`} class="block group">
            <div class="bg-white rounded-lg shadow-md hover:shadow-xl transition-all duration-300 h-full">
              <div class="p-6">
                <div class="flex justify-between items-start mb-4">
                  <h3 class="text-2xl font-bold text-gray-900 group-hover:text-orange-600 transition">
                    {segment.name}
                  </h3>
                </div>
                
                <p class="text-gray-600 mb-4">
                  {segment.description}
                </p>

                <div class="space-y-3 mb-6">
                  <div class="flex justify-between items-center">
                    <span class="text-sm text-gray-600">Average Waste</span>
                    <span class="font-bold text-red-600">{segment.averageWaste}</span>
                  </div>
                  <div class="flex justify-between items-center">
                    <span class="text-sm text-gray-600">Typical Outlets</span>
                    <span class="font-semibold text-gray-800">{segment.averageOutlets}</span>
                  </div>
                  <div class="flex justify-between items-center">
                    <span class="text-sm text-gray-600">Daily Orders</span>
                    <span class="font-semibold text-gray-800">{segment.keyMetrics.dailyOrders}</span>
                  </div>
                </div>

                <div class="border-t pt-4">
                  <p class="text-sm text-gray-600 mb-2">Key Challenges:</p>
                  <ul class="text-sm text-gray-700 space-y-1">
                    {segment.painPoints.slice(0, 2).map((pain) => (
                      <li class="flex items-start gap-2">
                        <span class="text-orange-500 mt-1">‚Ä¢</span>
                        <span>{pain}</span>
                      </li>
                    ))}
                  </ul>
                </div>

                <div class="mt-6 flex items-center justify-between">
                  <span class="text-orange-600 font-semibold group-hover:underline">
                    Learn More ‚Üí
                  </span>
                  <span class="text-sm text-green-600 font-semibold">
                    Save {segment.testimonial.savings.split('/')[0]}+
                  </span>
                </div>
              </div>
            </div>
          </a>
        ))}
      </div>
    </section>

    <section class="bg-gradient-to-r from-orange-600 to-orange-700 text-white rounded-lg p-8 mb-12">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-3xl font-bold mb-4">
          Every Restaurant Type, One Solution
        </h2>
        <p class="text-xl mb-8 text-orange-50">
          No matter your restaurant type, RestoPi adapts to your specific needs and challenges.
        </p>
        <div class="grid md:grid-cols-3 gap-6 text-left">
          <div class="bg-white/10 backdrop-blur-sm rounded-lg p-4">
            <h4 class="font-bold mb-2">üéØ Targeted Solutions</h4>
            <p class="text-sm text-orange-50">Customized features for your segment's unique challenges</p>
          </div>
          <div class="bg-white/10 backdrop-blur-sm rounded-lg p-4">
            <h4 class="font-bold mb-2">üìä Proven Results</h4>
            <p class="text-sm text-orange-50">Average ‚Çπ2 lakhs monthly savings across all segments</p>
          </div>
          <div class="bg-white/10 backdrop-blur-sm rounded-lg p-4">
            <h4 class="font-bold mb-2">‚è∞ Work-Life Balance</h4>
            <p class="text-sm text-orange-50">Get home by 10 PM, regardless of restaurant type</p>
          </div>
        </div>
      </div>
    </section>

    <section class="text-center py-12">
      <h2 class="text-3xl font-bold text-gray-900 mb-4">
        Find Your Restaurant Type Above
      </h2>
      <p class="text-xl text-gray-700 mb-8">
        Click on any segment to see specific solutions, case studies, and savings potential.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/demo" class="bg-orange-600 text-white px-8 py-3 rounded-lg font-semibold hover:bg-orange-700 transition">
          Book Free Demo
        </a>
        <a href="/calculator" class="border-2 border-orange-600 text-orange-600 px-8 py-3 rounded-lg font-semibold hover:bg-orange-50 transition">
          Calculate Your Savings
        </a>
      </div>
    </section>
  </main>
  <Footer />
  <WhatsAppButton />
</BaseLayout>