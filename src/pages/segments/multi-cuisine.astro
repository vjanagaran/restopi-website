<script>
function calculateMultiCuisineROI() {
  const numCuisines = parseInt(document.getElementById('numCuisines').value) || 0;
  const monthlyRevenue = parseInt(document.getElementById('monthlyRevenue').value) || 0;
  
  if (numCuisines === 0 || monthlyRevenue === 0 || numCuisines < 2) {
    alert('Please enter number of cuisines (minimum 2) and monthly revenue');
    return;
  }
  
  // Multi-cuisine specific calculations
  const complexityMultiplier = Math.min(numCuisines * 0.15, 0.6); // Complexity increases with more cuisines
  const wasteReduction = monthlyRevenue * complexityMultiplier; // Higher waste with more cuisines
  const inventoryOptimization = monthlyRevenue * 0.12; // 12% through unified inventory
  const kitchenEfficiency = monthlyRevenue * (numCuisines * 0.03); // 3% per cuisine through coordination
  
  const totalSavings = wasteReduction + inventoryOptimization + kitchenEfficiency;
  const restopiCost = 40000; // Multi-cuisine pricing
  const netMonthlySavings = totalSavings - restopiCost;
  
  const efficiencyGain = Math.min(numCuisines * 15, 75); // 15% per cuisine, max 75%
  const complexityReduction = Math.min(numCuisines * 12, 60); // 12% per cuisine, max 60%
  
  document.getElementById('monthlySavings').textContent = '‚Çπ' + Math.round(netMonthlySavings).toLocaleString();
  document.getElementById('efficiencyGain').textContent = efficiencyGain + '%';
  document.getElementById('complexityReduction').textContent = complexityReduction + '%';
  
  document.getElementById('roiResults').classList.remove('hidden');
  
  // Track calculation
  window.trackEvent('roi_calculated', {
    segment: 'multi_cuisine',
    num_cuisines: numCuisines,
    monthly_revenue: monthlyRevenue,
    savings: netMonthlySavings
  });
}

