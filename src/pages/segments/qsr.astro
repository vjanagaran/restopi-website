---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Navigation from '../../components/Navigation.astro';
import Footer from '../../components/Footer.astro';
import WhatsAppButton from '../../components/WhatsAppButton.astro';
import segments from '../../data/segments.json';

const qsrSegment = segments.segments.find(s => s.id === 'qsr');

// QSR Pain Points with psychological triggers
const painPoints = [
  {
    trigger: "Rush Hour Chaos",
    pain: "Your kitchen burns through ₹15,000 worth of ingredients during lunch rush because you can't predict the tsunami of orders",
    emotion: "Watching profits vanish in 2 hours",
    visual: "🔥",
    cost: "₹4.5L monthly"
  },
  {
    trigger: "Inventory Russian Roulette", 
    pain: "You order blindly, pray it sells, then watch ₹8,000 worth of fresh ingredients rot because demand didn't match your gut feeling",
    emotion: "Playing expensive guessing games with your money",
    visual: "🎰",
    cost: "₹2.4L monthly"
  },
  {
    trigger: "Multi-Platform Madness",
    pain: "Orders flood in from Zomato, Swiggy, walk-ins - you prep for chaos, end up with mountains of waste or angry customers",
    emotion: "Drowning in unpredictable demand streams",
    visual: "📱",
    cost: "₹1.8L monthly"
  },
  {
    trigger: "Speed vs Quality Trap",
    pain: "Push speed = more waste. Focus on quality = slower service. You're trapped between efficiency and profitability",
    emotion: "Impossible optimization dilemma",
    visual: "⚡",
    cost: "₹2.2L monthly"
  }
];

const solutions = [
  {
    solution: "AI Rush Hour Predictor",
    description: "Know exactly how many orders are coming 2 hours before lunch rush hits",
    impact: "Reduce rush hour waste by 60%",
    savings: "₹3.2L monthly"
  },
  {
    solution: "Real-Time Portion Control",
    description: "Smart alerts prevent over-portioning during high-speed operations",
    impact: "Stop bleeding money on oversized portions",
    savings: "₹1.8L monthly"
  },
  {
    solution: "Multi-Platform Sync",
    description: "Unified demand prediction across all delivery platforms",
    impact: "End the multi-platform inventory chaos",
    savings: "₹2.1L monthly"
  },
  {
    solution: "Speed-Optimized Prep Planning",
    description: "Prep exactly what you need, when you need it for maximum speed",
    impact: "Faster service + less waste",
    savings: "₹1.4L monthly"
  }
];
---

<BaseLayout title="Quick Service Restaurants (QSR) - Save ₹2.5 Lakhs Monthly | RestoPi">
  <Navigation />
  <main class="pt-20">
    <!-- Dramatic Hero Section -->
    <section class="bg-gradient-to-br from-red-900 via-red-800 to-orange-900 text-white py-20">
      <div class="max-w-7xl mx-auto px-4">
        <div class="text-center mb-12">
          <div class="inline-block bg-red-600/30 backdrop-blur-sm border border-red-300/30 text-red-100 px-6 py-3 rounded-full text-sm font-semibold mb-6">
            🔥 QUICK SERVICE RESTAURANTS BLEEDING MONEY
          </div>
          <h1 class="text-5xl md:text-7xl font-black mb-8 leading-tight">
            QSR Owners:<br/>
            <span class="text-red-300">Stop the</span> ₹11 Lakh 
            <span class="text-red-300">Monthly Waste</span>
          </h1>
          <p class="text-2xl md:text-3xl text-red-100 mb-8 max-w-4xl mx-auto leading-relaxed">
            Every lunch rush, you're burning ₹15,000. Every dinner peak, another ₹12,000 vanishes. 
            <span class="text-yellow-300 font-bold">While your competitor down the street saves ₹2.8 lakhs monthly with RestoPi.</span>
          </p>
          
          <!-- Shocking Stats -->
          <div class="grid md:grid-cols-3 gap-6 max-w-4xl mx-auto mb-12">
            <div class="bg-red-800/50 backdrop-blur-sm rounded-lg p-6 border border-red-600/30">
              <div class="text-4xl font-black text-red-300 mb-2">₹15,000</div>
              <div class="text-red-100">Lost Every Rush Hour</div>
            </div>
            <div class="bg-red-800/50 backdrop-blur-sm rounded-lg p-6 border border-red-600/30">
              <div class="text-4xl font-black text-red-300 mb-2">18%</div>
              <div class="text-red-100">Average QSR Waste Rate</div>
            </div>
            <div class="bg-red-800/50 backdrop-blur-sm rounded-lg p-6 border border-red-600/30">
              <div class="text-4xl font-black text-red-300 mb-2">2 Hours</div>
              <div class="text-red-100">Time to Burn Through Profits</div>
            </div>
          </div>

          <div class="flex flex-col sm:flex-row gap-6 justify-center">
            <a href="https://wa.me/919884248927?text=STOP%20my%20QSR%20from%20losing%20₹15K%20daily!" 
               class="bg-green-600 hover:bg-green-700 text-white px-10 py-5 rounded-lg font-black text-xl transition-all transform hover:scale-105 shadow-2xl">
              🚨 STOP THE BLEEDING NOW
            </a>
            <a href="/demo" 
               class="bg-white hover:bg-gray-100 text-red-900 px-10 py-5 rounded-lg font-black text-xl transition-all border-2 border-white">
              See How (2-Min Demo)
            </a>
          </div>
          
          <div class="mt-8 text-red-200">
            <p class="text-lg">⚡ 5-Minute Setup &nbsp;•&nbsp; 💰 See Results in 24 Hours &nbsp;•&nbsp; 📞 24/7 Support</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Financial Reality Check -->
    <section class="bg-white py-16">
      <div class="max-w-7xl mx-auto px-4">
        <div class="text-center mb-12">
          <h2 class="text-4xl md:text-5xl font-black text-gray-900 mb-4">
            Your QSR's <span class="text-red-600">Financial Bloodbath</span>
          </h2>
          <p class="text-xl text-gray-700 max-w-3xl mx-auto">
            These aren't just numbers. This is your money disappearing every single day.
          </p>
        </div>
        
        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
          <div class="bg-gradient-to-br from-red-500 to-red-600 text-white p-8 rounded-xl shadow-xl transform hover:scale-105 transition-all">
            <div class="text-6xl font-black mb-2">{qsrSegment.keyMetrics.dailyOrders.split('-')[1]}</div>
            <div class="text-red-200 font-bold mb-2">Orders Daily</div>
            <div class="text-red-100 text-sm">= ₹15K+ daily waste potential</div>
          </div>
          
          <div class="bg-gradient-to-br from-orange-500 to-orange-600 text-white p-8 rounded-xl shadow-xl transform hover:scale-105 transition-all">
            <div class="text-6xl font-black mb-2">{qsrSegment.keyMetrics.avgTicketSize.split('-')[1].replace('₹', '₹')}</div>
            <div class="text-orange-200 font-bold mb-2">Average Ticket</div>
            <div class="text-orange-100 text-sm">Higher volume = bigger waste risk</div>
          </div>
          
          <div class="bg-gradient-to-br from-red-600 to-red-700 text-white p-8 rounded-xl shadow-xl transform hover:scale-105 transition-all">
            <div class="text-6xl font-black mb-2">{qsrSegment.keyMetrics.wastePercentage.split('-')[1]}</div>
            <div class="text-red-200 font-bold mb-2">Waste Rate</div>
            <div class="text-red-100 text-sm">BLEEDING money every hour</div>
          </div>
          
          <div class="bg-gradient-to-br from-gray-700 to-gray-800 text-white p-8 rounded-xl shadow-xl transform hover:scale-105 transition-all">
            <div class="text-4xl font-black mb-2">{qsrSegment.keyMetrics.peakHours}</div>
            <div class="text-gray-300 font-bold mb-2">Peak Chaos</div>
            <div class="text-gray-400 text-sm">When you lose the most money</div>
          </div>
        </div>
      </div>
    </section>

    <!-- Pain Points - Psychological Triggers -->
    <section class="bg-gradient-to-br from-red-900 to-red-800 text-white py-20">
      <div class="max-w-7xl mx-auto px-4">
        <div class="text-center mb-16">
          <h2 class="text-5xl md:text-6xl font-black mb-6">
            The 4 Ways Your QSR <span class="text-red-300">Hemorrhages Cash</span>
          </h2>
          <p class="text-2xl text-red-100 max-w-4xl mx-auto">
            Every QSR owner knows these nightmares. But only the smart ones stop them.
          </p>
        </div>
        
        <div class="grid lg:grid-cols-2 gap-12">
          {painPoints.map((pain, index) => (
            <div class="bg-red-800/50 backdrop-blur-sm rounded-2xl p-8 border border-red-600/30 hover:bg-red-700/50 transition-all">
              <div class="flex items-start gap-6">
                <div class="text-6xl">{pain.visual}</div>
                <div class="flex-1">
                  <div class="flex items-center gap-4 mb-4">
                    <h3 class="text-2xl font-black text-white">{pain.trigger}</h3>
                    <div class="bg-red-600 text-white px-3 py-1 rounded-full text-sm font-bold">
                      -{pain.cost}
                    </div>
                  </div>
                  <p class="text-xl text-red-100 mb-4 leading-relaxed">{pain.pain}</p>
                  <p class="text-red-300 italic">"{pain.emotion}"</p>
                </div>
              </div>
            </div>
          ))}
        </div>
        
        <div class="text-center mt-16">
          <div class="inline-block bg-red-600/30 backdrop-blur-sm border border-red-300/30 text-red-100 px-8 py-4 rounded-xl mb-8">
            <div class="text-4xl font-black text-white mb-2">₹11.2 Lakhs Monthly</div>
            <div class="text-red-200">Total bleeding from these 4 pain points</div>
          </div>
          <div>
            <a href="https://wa.me/919884248927?text=Stop%20my%20QSR%20bleeding%20₹11L%20monthly!" 
               class="bg-green-600 hover:bg-green-700 text-white px-12 py-6 rounded-xl font-black text-2xl transition-all transform hover:scale-105 shadow-2xl">
              🩹 STOP THE BLEEDING
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Solutions - The Transformation -->
    <section class="bg-gradient-to-br from-green-600 to-green-700 text-white py-20">
      <div class="max-w-7xl mx-auto px-4">
        <div class="text-center mb-16">
          <h2 class="text-5xl md:text-6xl font-black mb-6">
            RestoPi: Your QSR's <span class="text-green-300">Profit Protector</span>
          </h2>
          <p class="text-2xl text-green-100 max-w-4xl mx-auto">
            Stop playing defense against waste. Go on the offense for profits.
          </p>
        </div>
        
        <div class="grid lg:grid-cols-2 gap-12">
          {solutions.map((solution, index) => (
            <div class="bg-green-700/50 backdrop-blur-sm rounded-2xl p-8 border border-green-500/30 hover:bg-green-600/50 transition-all">
              <div class="flex items-start gap-6">
                <div class="bg-green-500 text-white rounded-xl p-4 text-2xl font-black">
                  {index + 1}
                </div>
                <div class="flex-1">
                  <div class="flex items-center gap-4 mb-4">
                    <h3 class="text-2xl font-black text-white">{solution.solution}</h3>
                    <div class="bg-green-500 text-white px-3 py-1 rounded-full text-sm font-bold">
                      +{solution.savings}
                    </div>
                  </div>
                  <p class="text-xl text-green-100 mb-4 leading-relaxed">{solution.description}</p>
                  <p class="text-green-300 font-bold text-lg">✅ {solution.impact}</p>
                </div>
              </div>
            </div>
          ))}
        </div>
        
        <div class="text-center mt-16">
          <div class="inline-block bg-green-500/30 backdrop-blur-sm border border-green-300/30 text-green-100 px-8 py-4 rounded-xl mb-8">
            <div class="text-4xl font-black text-white mb-2">₹8.5 Lakhs Monthly</div>
            <div class="text-green-200">Total savings potential with these 4 solutions</div>
          </div>
          <div>
            <a href="https://wa.me/919884248927?text=I%20want%20to%20save%20₹8.5L%20monthly%20with%20RestoPi!" 
               class="bg-white hover:bg-green-50 text-green-700 px-12 py-6 rounded-xl font-black text-2xl transition-all transform hover:scale-105 shadow-2xl">
               💰 START SAVING NOW
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Success Story - Social Proof -->
    <section class="bg-white py-20">
      <div class="max-w-7xl mx-auto px-4">
        <div class="text-center mb-16">
          <div class="inline-block bg-orange-100 text-orange-700 px-6 py-3 rounded-full text-sm font-bold mb-6">
            🏆 REAL QSR SUCCESS STORY
          </div>
          <h2 class="text-4xl md:text-5xl font-black text-gray-900 mb-8">
            From <span class="text-red-600">₹15K Daily Loss</span> to 
            <span class="text-green-600">₹2.8L Monthly Profit</span>
          </h2>
        </div>
        
        <div class="bg-gradient-to-br from-orange-500 to-orange-600 text-white rounded-3xl p-12 max-w-5xl mx-auto">
          <div class="grid lg:grid-cols-3 gap-8 items-center">
            <div class="lg:col-span-2">
              <div class="text-6xl mb-6">💬</div>
              <blockquote class="text-3xl font-bold mb-8 leading-relaxed">
                "{qsrSegment.testimonial.quote}"
              </blockquote>
              <div class="flex items-center gap-4">
                <div class="bg-white rounded-full w-16 h-16 flex items-center justify-center">
                  <span class="text-2xl">👨‍💼</span>
                </div>
                <div>
                  <p class="text-xl font-black">{qsrSegment.testimonial.author}</p>
                  <p class="text-orange-200">{qsrSegment.testimonial.business}</p>
                </div>
              </div>
            </div>
            
            <div class="text-center lg:text-right">
              <div class="bg-orange-400/30 backdrop-blur-sm rounded-2xl p-8 border border-orange-300/30">
                <div class="text-sm text-orange-200 mb-2">Monthly Savings</div>
                <div class="text-5xl font-black mb-4">{qsrSegment.testimonial.savings}</div>
                <div class="text-orange-200 text-sm">In just 2 months</div>
              </div>
            </div>
          </div>
        </div>
        
        <div class="text-center mt-12">
          <p class="text-xl text-gray-700 mb-6">
            <span class="font-bold">200+ QSRs</span> are already saving money with RestoPi. 
            When will you join them?
          </p>
          <a href="https://wa.me/919884248927?text=I%20want%20results%20like%20{qsrSegment.testimonial.business}!" 
             class="bg-orange-600 hover:bg-orange-700 text-white px-10 py-4 rounded-xl font-black text-xl transition-all transform hover:scale-105">
            GET SIMILAR RESULTS
          </a>
        </div>
      </div>
    </section>

    <!-- Final Urgency CTA -->
    <section class="bg-gradient-to-br from-red-900 via-red-800 to-orange-900 text-white py-20">
      <div class="max-w-7xl mx-auto px-4 text-center">
        <div class="mb-12">
          <div class="inline-block bg-red-600/30 backdrop-blur-sm border border-red-300/30 text-red-100 px-6 py-3 rounded-full text-sm font-bold mb-8">
            ⏰ YOUR COMPETITORS ARE ALREADY AHEAD
          </div>
          <h2 class="text-5xl md:text-6xl font-black mb-8 leading-tight">
            Every Day You Wait = 
            <span class="text-red-300">₹15,000 Lost</span>
          </h2>
          <p class="text-2xl text-red-100 mb-12 max-w-4xl mx-auto leading-relaxed">
            While you're reading this, QSRs using RestoPi are already saving money. 
            <span class="text-yellow-300 font-bold">Stop being the one who's always behind.</span>
          </p>
        </div>

        <!-- Urgency Timer Visual -->
        <div class="bg-red-800/50 backdrop-blur-sm rounded-2xl p-8 max-w-2xl mx-auto mb-12 border border-red-600/30">
          <div class="text-center">
            <div class="text-lg text-red-200 mb-4">Money lost while thinking about it:</div>
            <div class="grid grid-cols-3 gap-4 text-center">
              <div>
                <div class="text-3xl font-black text-red-300">₹625</div>
                <div class="text-red-200 text-sm">Per Hour</div>
              </div>
              <div>
                <div class="text-3xl font-black text-red-300">₹15K</div>
                <div class="text-red-200 text-sm">Per Day</div>
              </div>
              <div>
                <div class="text-3xl font-black text-red-300">₹4.5L</div>
                <div class="text-red-200 text-sm">Per Month</div>
              </div>
            </div>
          </div>
        </div>

        <div class="flex flex-col sm:flex-row gap-6 justify-center mb-8">
          <a href="https://wa.me/919884248927?text=URGENT:%20Stop%20my%20₹15K%20daily%20loss%20NOW!" 
             class="bg-green-600 hover:bg-green-700 text-white px-12 py-6 rounded-xl font-black text-2xl transition-all transform hover:scale-105 shadow-2xl">
            🚨 STOP LOSING MONEY NOW
          </a>
          <a href="/demo" 
             class="bg-white hover:bg-gray-100 text-red-900 px-12 py-6 rounded-xl font-black text-2xl transition-all border-2 border-white">
            2-Minute Demo
          </a>
        </div>

        <div class="bg-red-800/30 backdrop-blur-sm rounded-xl p-6 max-w-2xl mx-auto border border-red-600/30">
          <p class="text-red-100 text-lg mb-4">
            ✅ 200+ QSRs already saving ₹2.5L+ monthly<br/>
            ✅ 5-minute setup, results in 24 hours<br/>
            ✅ Works with your existing POS system
          </p>
          <p class="text-yellow-300 font-bold text-xl">
            Don't be the last QSR owner to get smart about waste.
          </p>
        </div>
      </div>
    </section>
  </main>
  <Footer />
  <WhatsAppButton />
</BaseLayout>