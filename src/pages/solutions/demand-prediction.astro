        if (rect.top < window.innerHeight && rect.bottom > 0) {
          if (typeof gtag !== 'undefined') {
            gtag('event', 'competitive_intelligence_viewed', {
              section: section.dataset.competitorIntel,
              scroll_depth: Math.round((window.scrollY / document.body.scrollHeight) * 100)
            });
          }
        }
      });
    });

    // FOMO timer
    function updateScarcityTimer() {
      const slots = document.querySelectorAll('[data-slots]');
      slots.forEach(slot => {
        const current = parseInt(slot.textContent);
        if (current > 15) {
          // Simulate decreasing slots
          const newCount = Math.max(15, current - Math.floor(Math.random() * 3));
          slot.textContent = newCount;
        }
      });
    }

    // Update scarcity every 5 minutes
    setInterval(updateScarcityTimer, 300000);

    // Track intelligence CTA clicks
